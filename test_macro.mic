MRF2[,]        "FOO[@1],@2"
MRF2[]x[]      "FOO@1x@2"
MRF3[a,b[c,d]] "FOO@1x@2"

FOO[]    "@1,@1"
;FOO[]X   "@1,A"

MRF[A/0]
; A/0,A/0,A/0

MRF2[A/0,B/0]
; A/0,A/0,B/0

MRF2[[A/0]@,]x[/0]
; A/0,A/0,B/0

MRF3[[A/0]@,,/1]
; A/0,A/1

L1: X/L2,M1

ME         "A/0"
ME[]       "A/0"
ME2[a,b]   "@1/1,@2/2"
ME2a[][]   "@1/1,@2/2"
ME3[]      "MRF2[@1,@1]"

ME
; A/0

ME[hello]
; A/0

ME2[a,b]
; A/1,B/2

ME2A[a][b]
; A/1,B/2

ME3[MRF[A/0]]
; A/0,A/0,A/0,A/0,A/0,A/0,A/0,A/0,A/0

; shortcut recursive macro blocker
A0 "A/A0"

